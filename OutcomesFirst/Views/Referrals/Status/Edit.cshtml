@model OutcomesFirst.ViewModels.StatusViewModel

@{
    ViewData["Title"] = "Edit";
}

<h3>System Admin</h3>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @Html.HiddenFor(m => m.StatusId)

    <div class="card">
        <div class="card-header" style="background-color:#b9e488">
            <div class="card-title">
                <span style="font-size: 1em; color:#1a75e8;">
                    <i class="fas fa-tools small"></i>
                </span>
                Status Code Edit
            </div>
        </div>
        <div class="card-body">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="StatusName" class="control-label"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="StatusName" class="form-control" />
                        <span asp-validation-for="StatusName" class="text-danger"></span>
                    </div>

                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="StatusPriority" class="control-label"></label>
                    </div>
                    <div class="col-md-8">
                        @Html.DropDownListFor(m => m.StatusPriority, Enumerable.Range(1, 10).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }))
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br/>
    <div class="form-group">
        <input type="submit" value="Update"  class="btn btn-success" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

