                            <p>
                                Enter <strong>Suitable</strong> comments

                                <div class="col-md-2">
                                    <label asp-for="ReferralSuitableComments" class="control-label"></label>
                                </div>
                                <div class="col-md-9">
                                    <textarea asp-for="ReferralSuitableComments" class="form-control rows=10"></textarea>
                                    <span asp-validation-for="ReferralSuitableComments" class="text-danger small"></span>
                                </div>
