                                    <div class="col-md-3">
                                        <input asp-for="ReferralSuitableColor" type="radio" value="green" class="form-control form-horizontal" />Suitable
                                    </div>
                                    <div class="col-md-3">
                                        <span asp-validation-for="ReferralSuitableColor" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>*@
                            <div class="form-group">
                                <h5>Suitable</h5>
                            </div>
