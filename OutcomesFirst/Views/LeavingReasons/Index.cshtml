@model IEnumerable<OutcomesFirst.ViewModels.LeavingReasonsViewModel>

@{
    ViewData["Title"] = "Leaving Reasons";
}

<h3>Leaving Reasons</h3>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LeavingReasonName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LeavingReasonName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LeavingReasonId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.LeavingReasonId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
