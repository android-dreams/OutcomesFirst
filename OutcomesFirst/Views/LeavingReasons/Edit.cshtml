@model OutcomesFirst.ViewModels.LeavingReasonsViewModel

@{
    ViewData["Title"] = "Edit";
}

<h3>System Admin</h3>
<br />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @Html.HiddenFor(m => m.LeavingReasonId)

    <div class="card">
        <div class="card-header" style="background-color:#b9e488">
            <h5 class="card-title">
                <span style="font-size: 1em; color:#1a75e8;">
                    <i class="fas fa-tools small"></i>
                </span>
                Leaving Reason Create
            </h5>
        </div>
        <div class="card-body">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="LeavingReasonDesc" class="control-label"></label>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="form-group">
                            <input asp-for="LeavingReasonDesc" class="form-control" />
                            <span asp-validation-for="LeavingReasonDesc" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>
</form>
<br />
<div>
    <a asp-action="Index">Back to List</a>
</div>

