@model OutcomesFirst.ViewModels.LeavingReasonsViewModel

@{
    ViewData["Title"] = "Create";
}

<h3>System Admin</h3>
<br />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card">
        <div class="card-header" style="background-color:#b9e488">
            <div class="card-title">
                <span style="font-size: 1em; color:#1a75e8;">
                    <i class="fas fa-tools small"></i>
                </span>
                Leaving Reason Create
            </div>
        </div>
        <div class="card-body">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="LeavingReasonName" class="control-label"></label>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="form-group">
                            <input asp-for="LeavingReasonName" class="form-control" />
                            <span asp-validation-for="LeavingReasonName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br/>
    <div class="form-group">
        <input type="submit" value="Create"  class="btn btn-success" />
    </div>
</form>
<br />
