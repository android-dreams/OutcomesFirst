@model OutcomesFirst.Models.Region

@{
    ViewData["Title"] = "Edit";
}



<h4>Region - Edit</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RegionId" />

            <div class="row text-left">
                <div class="col-md-6 offset-3 card">
                    <div class="card-block">
                        <h4 class="card-title">
                            <span style="font-size: 1em; color:coral;">
                                <i class="fas fa-globe-europe"></i>
                            </span>
                            Details
                        </h4>
                        <div style="font-size:17px;">


                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-5">
                                        <label asp-for="RegionName" class="control-label"></label>
                                    </div>

                                    <div class="col-md-7">
                                        <input asp-for="RegionName" class="form-control" />
                                        <span asp-validation-for="RegionName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-5">
                                        <label asp-for="RegionRegionalManagerId" class="control-label"></label>
                                    </div>

                                    <div class="col-md-7">
                                        <input asp-for="RegionRegionalManagerId" class="form-control" asp-items="ViewBag.RegionRegionalManagerId"/>
                                        <span asp-validation-for="RegionRegionalManagerId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>


        <div>
            <a asp-action="Index">Back to List</a>
        </div>

