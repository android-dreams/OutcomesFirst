@model OutcomesFirst.ViewModels.RegionViewModel

@{
    ViewData["Title"] = "Create";
    IEnumerable<SelectListItem> regionalmanagers = new List<SelectListItem> { new SelectListItem { Value = "0", Text = "Select...", Selected = true } }
            .Concat(Model.regionalManagers
            .OrderBy(x => x.RegionalManagerName)
            .Select(t => new SelectListItem
            {
                Value = t.RegionalManagerId.ToString(),
                Text = t.RegionalManagerName
            })); ;
}


<h3>System Admin</h3>
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card">
        <div class="card-header" style="background-color:#76b82a">
            <h5 class="card-title">
                <span style="font-size: 1em; color:#1a75e8;">
                    <i class="fas fa-tools small"></i>
                </span>
                Region Create
            </h5>
        </div>
        <div class="card-body">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="RegionName" class="control-label"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="RegionName" class="form-control" />
                        <span asp-validation-for="RegionName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="RegionRegionalManagerId" class="control-label"></label>
                    </div>
                    <div class="col-md-8">
                        <select asp-for="RegionRegionalManagerId" class="form-control" asp-items="regionalmanagers"></select>
                        <span asp-validation-for="RegionRegionalManagerId" class="text-danger small"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
    </form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

