@model PaginatedList<OutcomesFirst.Models.Placement>

@{
    ViewData["Title"] = "Occupancy";
}

<h1>Occupancy</h1>

<p>


    @using (Html.BeginForm("Index", "Placement", FormMethod.Get))
    {

        <div class="container">
            <div class="col-md-12">
                @*<div class="row form-horizontal">*@
                <div class="row">

                    <div class="col-md-2">
                        Service  @Html.DropDownList("serviceSearch", "All") &nbsp;
                    </div>


                    @*<div class="col-md-1"></div>*@
                    <div class="col-md-3">
                        Local Authority  @Html.DropDownList("laSearch", "All") &nbsp;
                    </div>


                    @*<div class="col-md-1"></div>*@
                    <div class="col-md-1">
                        ID @Html.TextBox("IDSearch", ViewBag.CurrentFilter as string, new { style = "width:90px" })
                    </div>

                    <div class="col-md-2"></div>
                    <div class="col-md-3">
                        <input type="submit" value="Filter" />
                        <div class="col-md-1"></div>
                    </div>
                </div>
            </div>
        </div>
    }
</p>

          <table class="table">
            <thead>
                <tr>
                    <th>
                        Service
                    </th>
                    <th>
                        ID
                    </th>

                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Gender
                    </th>
                    <th>
                        Local Authority
                    </th>

                    <th>
                        Placement Start Date
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.PlacementService.ServiceName)
                          
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PlacementRefId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PlacementFirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PlacementLastName)
                        </td>

                        <td>

                            @Html.DisplayFor(modelItem => item.PlacementGender.GenderName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.PlacementLocalAuthority.LocalAuthorityName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PlacementPlacementStartDate)
                        </td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@item.PlacementId">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
   

    @{
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }

    @*<a asp-action="Index"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-default @prevDisabled">
        Previous
    </a>
    <a asp-action="Index"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-default @nextDisabled">
        Next
    </a>*@





