@model IEnumerable<OutcomesFirst.ViewModels.LocalAuthorityViewModel>

@{
    ViewData["Title"] = "Local Authorities";
}

<h3>Local Authorities</h3>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LocalAuthorityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocalAuthorityRegionId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LocalAuthorityName)
            </td>
            <td>
               
                @Html.DisplayFor(modelItem => item.Region.RegionName)
        
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LocalAuthorityId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.LocalAuthorityId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
