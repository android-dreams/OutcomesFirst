@model OutcomesFirst.ViewModels.RegionalManagerViewModel

@{
    ViewData["Title"] = "Edit";
}

<h3>System Admin</h3>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(m => m.RegionalManagerId)

    <div class="card">
        <div class="card-header" style="background-color:#b9e488">
            <h5 class="card-title">
                <span style="font-size: 1em; color:#1a75e8;">
                    <i class="fas fa-tools small"></i>
                </span>
                Regional Manager Edit
            </h5>
        </div>
        <div class="card-body">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="RegionalManagerName" class="control-label"></label>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="RegionalManagerName" class="form-control" />
                        <span asp-validation-for="RegionalManagerName" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br/>
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

