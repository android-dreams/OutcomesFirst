@model IEnumerable<OutcomesFirst.ViewModels.ArchiveReasonViewModel>

@{
    ViewData["Title"] = "Archive Reaasons";

    IEnumerable<SelectListItem> decisionMaker
        = new List<SelectListItem> {     
                                        new SelectListItem{ Text="Our Decision", Value = "1" },
                                        new SelectListItem{ Text="Local Authority Decision", Value = "2" },
                                        new SelectListItem{ Text="Parent Decision/Other", Value = "3" },
                                        new SelectListItem{ Text="Withdrawn", Value = "4" }
        };


}

<h3>Archive Reasons</h3>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ArchiveReasonName)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArchiveReasonName)
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.ArchiveReasonId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.ArchiveReasonId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
