@model OutcomesFirst.Models.ArchiveReason

@{
    ViewData["Title"] = "Edit";
}



<h4>Archive Reason - Edit</h4>
<hr />

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ArchiveReasonId" />

        <div>

            <div class="row text-left">
                <div class="col-md-6 offset-3 card">
                    <div class="card-block">
                        <h4 class="card-title">
                            <span style="font-size: 1em; color:coral;">
                                <i class="fas fa-file-archive"></i>
                            </span>
                            Details
                        </h4>
                        <div style="font-size:17px;">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label asp-for="ArchiveReasonName" class="control-label"></label>
                                        </div>
                                    </div>
                                    <div class="col-md-7">
                                        <input asp-for="ArchiveReasonName" class="form-control" />
                                        <span asp-validation-for="ArchiveReasonName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-5">
                                        <label asp-for="ArchiveDecisionBy" class="control-label"></label>
                                    </div>
                                    <div class="col-md-7">
                                        @Html.DropDownList("ArchiveDecisionBy", new List<SelectListItem>
                                            {
                                                new SelectListItem{ Text="Our Decision", Value = "1" },
                                                new SelectListItem{ Text="Local Authority Decision", Value = "2" },
                                                new SelectListItem{ Text="Parent Decision/Other", Value = "3" },
                                                new SelectListItem{ Text="Withdrawn", Value = "4" }
                                             })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        <br />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
</form>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

