@model OutcomesFirst.ViewModels.ArchiveReasonViewModel

@{
    ViewData["Title"] = "Edit";
    IEnumerable<SelectListItem> decisionMaker
        = new List<SelectListItem> {     
                                        new SelectListItem{ Text="Our Decision", Value = "1" },
                                        new SelectListItem{ Text="Local Authority Decision", Value = "2" },
                                        new SelectListItem{ Text="Parent Decision/Other", Value = "3" },
                                        new SelectListItem{ Text="Withdrawn", Value = "4" }
        };
}


<h3>System Admin</h3>

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ArchiveReasonId" />

        <div class="card">
            <div class="card-header" style="background-color:#b9e488">
                <div class="card-title">
                    <span style="font-size: 1em; color:#1a75e8;">
                        <i class="fas fa-tools small"></i>
                    </span>
                    Archive Reasons Edit
                </div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label asp-for="ArchiveReasonName" class="control-label"></label>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <input asp-for="ArchiveReasonName" class="form-control" />
                            <span asp-validation-for="ArchiveReasonName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-5">
                            <label asp-for="ArchiveDecisionBy" class="control-label"></label>
                        </div>
                        <div class="col-md-7">
                            <select asp-for="ArchiveDecisionBy" class="form-control" asp-items="decisionMaker"></select>
                            <span asp-validation-for="ArchiveDecisionBy" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <br />

        <div class="form-group">
            <input type="submit" value="Save"  class="btn btn-success" />
        </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

