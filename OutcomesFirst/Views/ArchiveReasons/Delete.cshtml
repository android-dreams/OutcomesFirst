@model OutcomesFirst.ViewModels.ArchiveReasonViewModel

@{
    ViewData["Title"] = "Delete";
    IEnumerable<SelectListItem> decisionMaker
        = new List<SelectListItem> {
                                        new SelectListItem{ Text="Our Decision", Value = "1" },
                                        new SelectListItem{ Text="Local Authority Decision", Value = "2" },
                                        new SelectListItem{ Text="Parent Decision/Other", Value = "3" },
                                        new SelectListItem{ Text="Withdrawn", Value = "4" }
        };

}
<p>
<h3>Are you sure you want to delete this?</h3>
</p>
<div>
    <div>

        <div class="card">
            <div class="card-header" style="background-color:#b9e488">
                <div class="card-title">
                    <span style="font-size: 1em; color:#1a75e8;">
                        <i class="fas fa-tools small"></i>
                    </span>
                    Archive Reasons Delete
                </div>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ArchiveReasonName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ArchiveReasonName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ArchiveDecisionBy)
                    </dt>
                    <dd class="col-sm-10">
                        <div class="col-md-7">
                            <select asp-for="ArchiveDecisionBy" class="form-control" asp-items="decisionMaker"></select>
                            <span asp-validation-for="ArchiveDecisionBy" class="text-danger small"></span>
                        </div>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <br/>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="ArchiveReasonId" />
            <input type="submit" value="Delete"  class="btn btn-danger" />
        </form>

    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
